<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════════
         BIOME THEME - "Forest Floor at Dawn"
         A soft, organic green palette inspired by natural ecosystems
    ═══════════════════════════════════════════════════════════════════ -->

    <!-- Primary Greens -->
    <Color x:Key="BiomeDeepForest">#2D5A4A</Color>
    <Color x:Key="BiomeMossGreen">#4A7C59</Color>
    <Color x:Key="BiomeMorningDew">#8FBC8F</Color>
    <Color x:Key="BiomeMistyWhite">#F5FAF7</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="BiomeSunlight">#E8B54D</Color>
    <Color x:Key="BiomeSunlightSoft">#F5D789</Color>
    
    <!-- State Colors -->
    <Color x:Key="BiomeSuccess">#6BBF59</Color>
    <Color x:Key="BiomeWarning">#E8B54D</Color>
    <Color x:Key="BiomeError">#D96459</Color>
    
    <!-- Surface Colors -->
    <Color x:Key="BiomeSurfaceDark">#1A3D2E</Color>
    <Color x:Key="BiomeSurfaceMedium">#234538</Color>
    <Color x:Key="BiomeSurfaceLight">#2D5A4A</Color>
    <Color x:Key="BiomeCardBackground">#FFFFFF</Color>
    <Color x:Key="BiomeCardBackgroundAlt">#F8FBF9</Color>
    
    <!-- Text Colors -->
    <Color x:Key="BiomeTextPrimary">#1A3D2E</Color>
    <Color x:Key="BiomeTextSecondary">#5A7D6A</Color>
    <Color x:Key="BiomeTextOnDark">#E8F5E9</Color>
    <Color x:Key="BiomeTextMuted">#8FA99A</Color>

    <!-- ═══════════════════════════════════════════════════════════════════
         SOLID COLOR BRUSHES
    ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Primary -->
    <SolidColorBrush x:Key="BiomeDeepForestBrush" Color="{StaticResource BiomeDeepForest}"/>
    <SolidColorBrush x:Key="BiomeMossGreenBrush" Color="{StaticResource BiomeMossGreen}"/>
    <SolidColorBrush x:Key="BiomeMorningDewBrush" Color="{StaticResource BiomeMorningDew}"/>
    <SolidColorBrush x:Key="BiomeMistyWhiteBrush" Color="{StaticResource BiomeMistyWhite}"/>
    
    <!-- Accent -->
    <SolidColorBrush x:Key="BiomeSunlightBrush" Color="{StaticResource BiomeSunlight}"/>
    <SolidColorBrush x:Key="BiomeSunlightSoftBrush" Color="{StaticResource BiomeSunlightSoft}"/>
    
    <!-- States -->
    <SolidColorBrush x:Key="BiomeSuccessBrush" Color="{StaticResource BiomeSuccess}"/>
    <SolidColorBrush x:Key="BiomeWarningBrush" Color="{StaticResource BiomeWarning}"/>
    <SolidColorBrush x:Key="BiomeErrorBrush" Color="{StaticResource BiomeError}"/>
    
    <!-- Surfaces -->
    <SolidColorBrush x:Key="BiomeSurfaceDarkBrush" Color="{StaticResource BiomeSurfaceDark}"/>
    <SolidColorBrush x:Key="BiomeSurfaceMediumBrush" Color="{StaticResource BiomeSurfaceMedium}"/>
    <SolidColorBrush x:Key="BiomeSurfaceLightBrush" Color="{StaticResource BiomeSurfaceLight}"/>
    <SolidColorBrush x:Key="BiomeCardBackgroundBrush" Color="{StaticResource BiomeCardBackground}"/>
    <SolidColorBrush x:Key="BiomeCardBackgroundAltBrush" Color="{StaticResource BiomeCardBackgroundAlt}"/>
    
    <!-- Text -->
    <SolidColorBrush x:Key="BiomeTextPrimaryBrush" Color="{StaticResource BiomeTextPrimary}"/>
    <SolidColorBrush x:Key="BiomeTextSecondaryBrush" Color="{StaticResource BiomeTextSecondary}"/>
    <SolidColorBrush x:Key="BiomeTextOnDarkBrush" Color="{StaticResource BiomeTextOnDark}"/>
    <SolidColorBrush x:Key="BiomeTextMutedBrush" Color="{StaticResource BiomeTextMuted}"/>

    <!-- ═══════════════════════════════════════════════════════════════════
         GRADIENT BRUSHES - Organic feel
    ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Sidebar gradient - deep to medium green -->
    <LinearGradientBrush x:Key="BiomeSidebarGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource BiomeSurfaceDark}" Offset="0.0"/>
        <GradientStop Color="{StaticResource BiomeSurfaceMedium}" Offset="0.5"/>
        <GradientStop Color="{StaticResource BiomeSurfaceLight}" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Soft glow effect for active states -->
    <RadialGradientBrush x:Key="BiomeGlowBrush" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
        <GradientStop Color="#404A7C59" Offset="0"/>
        <GradientStop Color="#004A7C59" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Sunlight accent glow -->
    <RadialGradientBrush x:Key="BiomeSunlightGlowBrush" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
        <GradientStop Color="#60E8B54D" Offset="0"/>
        <GradientStop Color="#00E8B54D" Offset="1"/>
    </RadialGradientBrush>

    <!-- ═══════════════════════════════════════════════════════════════════
         SHADOWS AND EFFECTS
    ═══════════════════════════════════════════════════════════════════ -->
    
    <DropShadowEffect x:Key="BiomeCardShadow" 
                      BlurRadius="20" 
                      ShadowDepth="4" 
                      Opacity="0.1" 
                      Color="#1A3D2E"
                      Direction="270"/>
    
    <DropShadowEffect x:Key="BiomeCardShadowHover" 
                      BlurRadius="30" 
                      ShadowDepth="8" 
                      Opacity="0.15" 
                      Color="#1A3D2E"
                      Direction="270"/>

</ResourceDictionary>
