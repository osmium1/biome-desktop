<Window x:Class="Biome.Desktop.App.Windowing.SpeedboostOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="SpeedboostOverlay" Height="100" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize">

    <Window.Resources>
        <Storyboard x:Key="BoostAnimation" Completed="Storyboard_Completed">
            <!-- Chevron 1 -->
            <DoubleAnimation Storyboard.TargetName="Chevron1" Storyboard.TargetProperty="Opacity"
                             From="0.2" To="1.0" Duration="0:0:0.1" BeginTime="0:0:0.0" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Chevron1" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1.0" To="1.4" Duration="0:0:0.1" BeginTime="0:0:0.0" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Chevron1" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1.0" To="1.4" Duration="0:0:0.1" BeginTime="0:0:0.0" AutoReverse="True"/>
            
            <!-- Chevron 2 -->
            <DoubleAnimation Storyboard.TargetName="Chevron2" Storyboard.TargetProperty="Opacity"
                             From="0.2" To="1.0" Duration="0:0:0.1" BeginTime="0:0:0.08" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Chevron2" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1.0" To="1.4" Duration="0:0:0.1" BeginTime="0:0:0.08" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Chevron2" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1.0" To="1.4" Duration="0:0:0.1" BeginTime="0:0:0.08" AutoReverse="True"/>

            <!-- Chevron 3 -->
            <DoubleAnimation Storyboard.TargetName="Chevron3" Storyboard.TargetProperty="Opacity"
                             From="0.2" To="1.0" Duration="0:0:0.1" BeginTime="0:0:0.16" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Chevron3" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1.0" To="1.4" Duration="0:0:0.1" BeginTime="0:0:0.16" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Chevron3" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1.0" To="1.4" Duration="0:0:0.1" BeginTime="0:0:0.16" AutoReverse="True"/>

            <!-- Chevron 4 -->
            <DoubleAnimation Storyboard.TargetName="Chevron4" Storyboard.TargetProperty="Opacity"
                             From="0.2" To="1.0" Duration="0:0:0.1" BeginTime="0:0:0.24" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Chevron4" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1.0" To="1.4" Duration="0:0:0.1" BeginTime="0:0:0.24" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Chevron4" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1.0" To="1.4" Duration="0:0:0.1" BeginTime="0:0:0.24" AutoReverse="True"/>

            <!-- Chevron 5 -->
            <DoubleAnimation Storyboard.TargetName="Chevron5" Storyboard.TargetProperty="Opacity"
                             From="0.2" To="1.0" Duration="0:0:0.1" BeginTime="0:0:0.32" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Chevron5" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1.0" To="1.4" Duration="0:0:0.1" BeginTime="0:0:0.32" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Chevron5" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1.0" To="1.4" Duration="0:0:0.1" BeginTime="0:0:0.32" AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="#1AFFFFFF" CornerRadius="16" Padding="16,8">
            <StackPanel Orientation="Horizontal">
            <!-- Chevron 1 -->
            <ui:SymbolIcon x:Name="Chevron1" Symbol="ChevronRight24" FontSize="48" Foreground="{DynamicResource SystemFillColorSuccessBrush}" Opacity="0.2" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                <ui:SymbolIcon.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </ui:SymbolIcon.RenderTransform>
                <ui:SymbolIcon.Effect>
                    <DropShadowEffect Color="#107C10" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                </ui:SymbolIcon.Effect>
            </ui:SymbolIcon>
            
            <!-- Chevron 2 -->
            <ui:SymbolIcon x:Name="Chevron2" Symbol="ChevronRight24" FontSize="48" Foreground="{DynamicResource SystemFillColorSuccessBrush}" Opacity="0.2" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                <ui:SymbolIcon.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </ui:SymbolIcon.RenderTransform>
                <ui:SymbolIcon.Effect>
                    <DropShadowEffect Color="#107C10" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                </ui:SymbolIcon.Effect>
            </ui:SymbolIcon>
            
            <!-- Chevron 3 -->
            <ui:SymbolIcon x:Name="Chevron3" Symbol="ChevronRight24" FontSize="48" Foreground="{DynamicResource SystemFillColorSuccessBrush}" Opacity="0.2" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                <ui:SymbolIcon.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </ui:SymbolIcon.RenderTransform>
                <ui:SymbolIcon.Effect>
                    <DropShadowEffect Color="#107C10" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                </ui:SymbolIcon.Effect>
            </ui:SymbolIcon>

            <!-- Chevron 4 -->
            <ui:SymbolIcon x:Name="Chevron4" Symbol="ChevronRight24" FontSize="48" Foreground="{DynamicResource SystemFillColorSuccessBrush}" Opacity="0.2" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                <ui:SymbolIcon.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </ui:SymbolIcon.RenderTransform>
                <ui:SymbolIcon.Effect>
                    <DropShadowEffect Color="#107C10" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                </ui:SymbolIcon.Effect>
            </ui:SymbolIcon>

            <!-- Chevron 5 -->
            <ui:SymbolIcon x:Name="Chevron5" Symbol="ChevronRight24" FontSize="48" Foreground="{DynamicResource SystemFillColorSuccessBrush}" Opacity="0.2" RenderTransformOrigin="0.5,0.5">
                <ui:SymbolIcon.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </ui:SymbolIcon.RenderTransform>
                <ui:SymbolIcon.Effect>
                    <DropShadowEffect Color="#107C10" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                </ui:SymbolIcon.Effect>
            </ui:SymbolIcon>
        </StackPanel>
        </Border>
    </Grid>
</Window>