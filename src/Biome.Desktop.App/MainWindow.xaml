<ui:FluentWindow x:Class="Biome.Desktop.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:pages="clr-namespace:Biome.Desktop.App.Pages"
        mc:Ignorable="d"
        Title="Biome" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True"
        Background="{StaticResource BiomeMistyWhiteBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar column -->
            <ColumnDefinition Width="64"/>
            <!-- Content column -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════
             SIDEBAR - Forest green navigation rail
        ═══════════════════════════════════════════════════════════════ -->
        <Border Grid.Column="0" 
                Background="{StaticResource BiomeSidebarGradient}"
                CornerRadius="0,16,16,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="48"/> <!-- Title bar space -->
                    <RowDefinition Height="Auto"/> <!-- Logo -->
                    <RowDefinition Height="*"/> <!-- Nav items -->
                    <RowDefinition Height="Auto"/> <!-- Footer items -->
                </Grid.RowDefinitions>

                <!-- Logo placeholder (top of sidebar) -->
                <Border Grid.Row="1" Margin="0,16,0,24" HorizontalAlignment="Center">
                    <Grid Width="36" Height="36">
                        <!-- Simple mycelium-inspired logo: connected dots -->
                        <Canvas>
                            <Ellipse Canvas.Left="8" Canvas.Top="4" Width="8" Height="8" 
                                     Fill="{StaticResource BiomeMorningDewBrush}"/>
                            <Ellipse Canvas.Left="22" Canvas.Top="10" Width="6" Height="6" 
                                     Fill="{StaticResource BiomeMorningDewBrush}" Opacity="0.8"/>
                            <Ellipse Canvas.Left="4" Canvas.Top="20" Width="5" Height="5" 
                                     Fill="{StaticResource BiomeMorningDewBrush}" Opacity="0.7"/>
                            <Ellipse Canvas.Left="18" Canvas.Top="26" Width="7" Height="7" 
                                     Fill="{StaticResource BiomeMorningDewBrush}"/>
                            <!-- Connecting lines -->
                            <Line X1="12" Y1="8" X2="25" Y2="13" 
                                  Stroke="{StaticResource BiomeMorningDewBrush}" 
                                  StrokeThickness="1.5" Opacity="0.5"/>
                            <Line X1="12" Y1="8" X2="6" Y2="22" 
                                  Stroke="{StaticResource BiomeMorningDewBrush}" 
                                  StrokeThickness="1.5" Opacity="0.5"/>
                            <Line X1="6" Y1="22" X2="21" Y2="29" 
                                  Stroke="{StaticResource BiomeMorningDewBrush}" 
                                  StrokeThickness="1.5" Opacity="0.5"/>
                            <Line X1="25" Y1="13" X2="21" Y2="29" 
                                  Stroke="{StaticResource BiomeMorningDewBrush}" 
                                  StrokeThickness="1.5" Opacity="0.5"/>
                        </Canvas>
                    </Grid>
                </Border>

                <!-- Navigation Items -->
                <StackPanel Grid.Row="2" VerticalAlignment="Top" Margin="0,8,0,0">
                    <Border x:Name="NavDashboard" 
                            Width="48" Height="48" Margin="8,4"
                            Background="Transparent" CornerRadius="8"
                            Cursor="Hand"
                            ToolTip="Console"
                            MouseLeftButtonUp="OnNavDashboardClick">
                        <ui:SymbolIcon Symbol="Home24" FontSize="22" 
                                       Foreground="{StaticResource BiomeTextOnDarkBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border x:Name="NavHistory" 
                            Width="48" Height="48" Margin="8,4"
                            Background="Transparent" CornerRadius="8"
                            Opacity="0.5"
                            ToolTip="History (Coming Soon)">
                        <ui:SymbolIcon Symbol="History24" FontSize="22" 
                                       Foreground="{StaticResource BiomeTextOnDarkBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Footer Items -->
                <StackPanel Grid.Row="3" VerticalAlignment="Bottom" Margin="0,0,0,16">
                    <Border x:Name="NavSettings" 
                            Width="48" Height="48" Margin="8,4"
                            Background="Transparent" CornerRadius="8"
                            Cursor="Hand"
                            ToolTip="Settings"
                            MouseLeftButtonUp="OnNavSettingsClick">
                        <ui:SymbolIcon Symbol="Settings24" FontSize="22" 
                                       Foreground="{StaticResource BiomeTextOnDarkBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════
             MAIN CONTENT AREA
        ═══════════════════════════════════════════════════════════════ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/> <!-- Title bar drag area -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom title bar area (for dragging) -->
            <Border Grid.Row="0" Background="Transparent" MouseLeftButtonDown="OnTitleBarDrag">
                <TextBlock Text="Biome" 
                           VerticalAlignment="Center" 
                           Margin="24,0,0,0"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource BiomeTextSecondaryBrush}"/>
            </Border>

            <!-- Page content frame -->
            <Frame x:Name="ContentFrame" 
                   Grid.Row="1" 
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>
        </Grid>
    </Grid>
</ui:FluentWindow>