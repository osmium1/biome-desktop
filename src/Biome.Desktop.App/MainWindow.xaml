<ui:FluentWindow x:Class="Biome.Desktop.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:pages="clr-namespace:Biome.Desktop.App.Pages"
        mc:Ignorable="d"
        Title="Biome" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowBackdropType="None"
        ExtendsContentIntoTitleBar="True">

    <!-- FULL WINDOW WRAPPER: Dark green background covers everything -->
    <Border Background="#1A3D2E">
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Sidebar column -->
                <ColumnDefinition Width="72"/>
                <!-- Content column -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ═══════════════════════════════════════════════════════════════
                 SIDEBAR - Navigation icons on dark green background
            ═══════════════════════════════════════════════════════════════ -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Logo at very top -->
                    <RowDefinition Height="*"/> <!-- Nav items -->
                    <RowDefinition Height="Auto"/> <!-- Footer items -->
                </Grid.RowDefinitions>

                <!-- Logo at very top left -->
                <Border Grid.Row="0" Margin="18,16,0,0" HorizontalAlignment="Left">
                    <Grid Width="36" Height="36">
                        <!-- Simple mycelium-inspired logo: connected dots -->
                        <Canvas>
                            <Ellipse Canvas.Left="8" Canvas.Top="4" Width="8" Height="8" 
                                     Fill="{StaticResource BiomeMorningDewBrush}"/>
                            <Ellipse Canvas.Left="22" Canvas.Top="10" Width="6" Height="6" 
                                     Fill="{StaticResource BiomeMorningDewBrush}" Opacity="0.8"/>
                            <Ellipse Canvas.Left="4" Canvas.Top="20" Width="5" Height="5" 
                                     Fill="{StaticResource BiomeMorningDewBrush}" Opacity="0.7"/>
                            <Ellipse Canvas.Left="18" Canvas.Top="26" Width="7" Height="7" 
                                     Fill="{StaticResource BiomeMorningDewBrush}"/>
                            <!-- Connecting lines -->
                            <Line X1="12" Y1="8" X2="25" Y2="13" 
                                  Stroke="{StaticResource BiomeMorningDewBrush}" 
                                  StrokeThickness="1.5" Opacity="0.5"/>
                            <Line X1="12" Y1="8" X2="6" Y2="22" 
                                  Stroke="{StaticResource BiomeMorningDewBrush}" 
                                  StrokeThickness="1.5" Opacity="0.5"/>
                            <Line X1="6" Y1="22" X2="21" Y2="29" 
                                  Stroke="{StaticResource BiomeMorningDewBrush}" 
                                  StrokeThickness="1.5" Opacity="0.5"/>
                            <Line X1="25" Y1="13" X2="21" Y2="29" 
                                  Stroke="{StaticResource BiomeMorningDewBrush}" 
                                  StrokeThickness="1.5" Opacity="0.5"/>
                        </Canvas>
                    </Grid>
                </Border>

                <!-- Navigation Items - Centered vertically -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,0,0,0">
                    <Border x:Name="NavDashboard" 
                            Width="48" Height="48" Margin="12,4"
                            Background="Transparent" CornerRadius="10"
                            Cursor="Hand"
                            ToolTip="Console"
                            MouseLeftButtonUp="OnNavDashboardClick">
                        <ui:SymbolIcon Symbol="Home24" FontSize="22" 
                                       Foreground="{StaticResource BiomeTextOnDarkBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border x:Name="NavHistory" 
                            Width="48" Height="48" Margin="12,4"
                            Background="Transparent" CornerRadius="10"
                            Opacity="0.5"
                            ToolTip="History (Coming Soon)">
                        <ui:SymbolIcon Symbol="History24" FontSize="22" 
                                       Foreground="{StaticResource BiomeTextOnDarkBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Footer Items -->
                <StackPanel Grid.Row="2" VerticalAlignment="Bottom" Margin="0,0,0,16">
                    <Border x:Name="NavSettings" 
                            Width="48" Height="48" Margin="12,4"
                            Background="Transparent" CornerRadius="10"
                            Cursor="Hand"
                            ToolTip="Settings"
                            MouseLeftButtonUp="OnNavSettingsClick">
                        <ui:SymbolIcon Symbol="Settings24" FontSize="22" 
                                       Foreground="{StaticResource BiomeTextOnDarkBrush}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Close button - macOS style circle, golden -->
            <Border Grid.Column="1"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Margin="0,8,16,0"
                    Width="14" Height="14"
                    CornerRadius="7"
                    Background="{StaticResource BiomeSunlightBrush}"
                    Cursor="Hand"
                    MouseLeftButtonUp="OnCloseClick"
                    MouseEnter="OnCloseButtonEnter"
                    MouseLeave="OnCloseButtonLeave"
                    x:Name="CloseButton">
                <!-- Small X inside the circle -->
                <TextBlock Text="×" 
                           FontSize="11" 
                           FontWeight="Bold"
                           Foreground="#1A3D2E"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="0,-2,0,0"/>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════
                 MAIN CONTENT AREA - White surface with rounded corners ON TOP
            ═══════════════════════════════════════════════════════════════ -->
            <Border Grid.Column="1" 
                    Background="{StaticResource BiomeMistyWhiteBrush}"
                    CornerRadius="20,0,0,0"
                    Margin="0,28,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/> <!-- Title bar drag area -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Custom title bar area (for dragging) -->
                    <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="OnTitleBarDrag"/>


                    <!-- Page content frame -->
                    <Frame x:Name="ContentFrame" 
                           Grid.Row="1" 
                           NavigationUIVisibility="Hidden"
                           Background="Transparent"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</ui:FluentWindow>